<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".corner_view_post">

    <!--Top menue bar begis-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:background="@color/TopMenueBackgroud"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_logo_top"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="serif"
            android:text="@string/corner_view"
            android:textColor="@color/Theme"
            android:textSize="50sp" />

    </LinearLayout>
    <!--Top menue bar ends-->


    <!--body start-->
    <!--body end-->


    <!--Bottom navigation bar begins-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/view_post_price"
            android:layout_width="163dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:text="@string/corner_viewAd_price"
            android:textColor="#F44336"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewpost_type" />

        <TextView
            android:id="@+id/viewpost_type"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/corner_viewAd_dogtype"
            android:textColor="#090909"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_post_image" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="225dp"
            android:layout_height="26dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:text="@string/corner_viewAd_description"
            android:textColor="#090909"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_post_price" />

        <TextView
            android:id="@+id/view_post_desc"
            android:layout_width="312dp"
            android:layout_height="55dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/care_viewAd_desDetails"
            android:textColor="#715D5D"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <ImageView
            android:id="@+id/view_post_image"
            android:layout_width="203dp"
            android:layout_height="155dp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/labradorpup"
            tools:layout_editor_absoluteY="49dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/view_post_phone"
            android:layout_width="123dp"
            android:layout_height="27dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:text="@string/corner_view_post_Number"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView35"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/viewPhone"
            android:layout_width="86dp"
            android:layout_height="26dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/corner_view_post_email"
            android:textColor="#090909"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/view_post_email"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView35" />

        <TextView
            android:id="@+id/view_post_email"
            android:layout_width="197dp"
            android:layout_height="18dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/corner_view_post_mail"
            app:layout_constraintBaseline_toBaselineOf="@+id/viewPhone"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/edit_post_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:text="@string/corner_view_post_delete"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/view_post_edit"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/view_post_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:text="@string/corner_view_post_edit"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/edit_post_cancel"
            app:layout_constraintTop_toBottomOf="@+id/view_post_email" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="103dp"
            android:layout_height="27dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/corner_view_post_phone"
            android:textColor="#090909"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/view_post_phone"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_post_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>